<h1>Edit <%=@song.name%></h1>

<form action="/songs/<%= @song.slug%>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<label for="name">Name:</label>
<br>
<input type="text" name="song[name]" id="name"value="<%=@song.name%>">
<br>

<h3>Select a genre</h3>
<% Genre.all.each do |genre| %>
    <input type="checkbox" name="[genres][]" id="<%=genre.name%>" value="<%=genre.id%>"><%='checked' if @song.genres.include?(genre)%><%=genre.name%></input>
    <%end%>

<h3> Songs artist </h3>
<label for="artist_name"> Artist Name: </label>
<br>    
<input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>">
<br>

<input type="submit" value="Edit song">

</form>